---
import BaseHead from '@components/BaseHead.astro';
interface Props {
  pageTitle: string;
  description: string;
  image?: string;
}
const {
  pageTitle,
  description = 'my description',
  image = '/placeholder-social.jpg',
} = Astro.props;
---

<style>
  html {
    background-color: var(--surface-1);
    color: var(--text-1);
    /* accent-color: var(--link); */
  }
  body {
    display: flex;
  }
  html,
  body {
    width: 100vw;
    min-height: 100vh;
    margin: 0;
    padding: 0;
  }
</style>

<html lang="en">
  <head>
    <BaseHead title={pageTitle} description={description} image={image} />
  </head>
  <body>
    <slot />
  </body>
</html>
