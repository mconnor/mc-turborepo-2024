{
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "cssvar.files": [
    "./node_modules/open-props/open-props.min.css",
    "src/styles/global.css",
    "src/styles/GlobalStyle.astro"
    // if you have an alternative path to where your styles are located
    // you can add it in this array of files
    // "assets/styles/variables.css"
  ],

  // Do not ignore node_modules css files, which is ignored by default
  "cssvar.ignore": [],

  // add support for autocomplete in JS or JS like files

  "stylelint.validate": ["astro"],
  // "editor.defaultFormatter": "astro-build.astro-vscode",

  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  // "editor.formatOnType": false,

  "[javascript][javascriptreact][typescript][typescriptreact]": {
    "editor.formatOnSave": false
  },


  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "astro", // Enable .astro
    "typescript", // Enable .ts
    "typescriptreact" // Enable .tsx
  ],

  "[astro][javascript][typescript][markdown][json]": {
    "editor.defaultFormatter": "astro-build.astro-vscode",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true
  },
 
  "editor.defaultFormatter":  "astro-build.astro-vscode",
  "typescript.inlayHints.parameterNames.enabled": "none"
}
